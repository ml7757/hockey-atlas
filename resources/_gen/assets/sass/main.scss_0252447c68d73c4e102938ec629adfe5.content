*,*::after,*::before{margin:0;paddin:0;box-sizing:border-box}main{max-width:1300px;margin:0 auto}html{font-size:62.5%}body{font-family:"Source Sans 3", sans-serif;font-style:normal;font-size:1.8rem}.menu-icon{transition:all 0.3s;display:none}.menu-icon__toggle{transition:all 0.3s;cursor:pointer;height:2rem;width:4rem;display:flex;flex-direction:column;align-self:center;margin-right:3rem}.menu-icon__spinner{transition:all 0.3s;height:.3rem;width:100%;background-color:#fff}.menu-icon__horizontal{transition:all 0.3s;box-sizing:border-box;margin-top:.5rem}.menu-icon__diagonal--1{position:relative;transition:all 0.3s}.menu-icon__diagonal--2{transition:all 0.3s;margin-top:.5rem}.menu-icon:checked~.sidebar{transform:translateX(0)}.menu-icon:checked~.menu-icon__toggle>.menu-icon__horizontal{transition:all 0.3s;opacity:0}.menu-icon:checked~.menu-icon__toggle>.menu-icon__diagonal--1{transition:all 0.3s;transform:rotate(135deg);margin-top:.8rem}.menu-icon:checked~.menu-icon__toggle>.menu-icon__diagonal--2{transition:all 0.3s;transform:rotate(-135deg);margin-top:-1rem}.nav__wrapper{background-color:#9E2B25;border-bottom:1rem solid #F2C57C;margin:5rem 0}.nav__content{height:7rem;max-width:1300px;margin:0 auto;display:flex}.nav__logo{margin-top:-2.7rem}.nav__list{list-style:none;width:100%;display:flex;align-items:center}.nav__item{margin-left:5rem}.nav__link:link,.nav__link:visited{text-decoration:none;color:#fff;font-weight:900}.nav__link:hover,.nav__link:active{border-bottom:.2rem solid #fff}
