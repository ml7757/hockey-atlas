*,*::after,*::before{margin:0;paddin:0;box-sizing:border-box}main{max-width:1300px;margin:0 auto}html{font-size:62.5%}body{font-family:"Source Sans 3", sans-serif;font-style:normal;font-size:1.8rem}.hamburger{transition:all 0.3s;display:none}.hamburger__toggle{transition:all 0.3s;cursor:pointer;height:2rem;width:4rem;display:flex;flex-direction:column;align-self:center;margin-right:3rem}.hamburger__spinner{transition:all 0.3s;height:.3rem;width:100%;background-color:#fff}.hamburger__horizontal{transition:all 0.3s;box-sizing:border-box;margin-top:.5rem}.hamburger__diagonal--1{position:relative;transition:all 0.3s}.hamburger__diagonal--2{transition:all 0.3s;margin-top:.5rem}.hamburger:checked~.menu{transform:translateX(0)}.hamburger:checked~.hamburger__toggle>.hamburger__horizontal{box-sizing:border-box;transition:all 0.3s;opacity:0}.hamburger:checked~.hamburger__toggle>.hamburger__diagonal--1{box-sizing:border-box;transition:all 0.3s;transform:rotate(135deg);margin-top:.8rem}.hamburger:checked~.hamburger__toggle>.hamburger__diagonal--2{box-sizing:border-box;transition:all 0.3s;transform:rotate(-135deg);margin-top:-1rem}.nav__wrapper{background-color:#9E2B25;border-bottom:1rem solid #F2C57C;margin:5rem 0}.nav__content,.menu__content{height:7rem;max-width:1300px;margin:0 auto;display:flex;justify-content:space-between}.nav__logo{margin-top:-2.7rem}.nav__list{list-style:none;width:100%;display:flex;align-items:center}.nav__item{margin-left:5rem}.nav__link:link,.menu__link:link,.nav__link:visited,.menu__link:visited{text-decoration:none;color:#fff;font-weight:900}.nav__link:hover,.menu__link:hover,.nav__link:active,.menu__link:active{border-bottom:.2rem solid #fff}.menu{background:rgba(158,43,37,0.9);height:100%;width:100%;margin-top:-5rem;left:0;position:fixed;overflow-y:scroll;transform:translateX(-100%);transition:transform 250ms ease-in-out;z-index:10}.menu__wrapper{margin:5rem 0}.menu__list{max-width:1300px;margin:0 auto;display:flex;justify-content:flex-end}.menu__links{margin-top:10rem;list-style:none}.menu__item:not(:last-child){margin-bottom:3rem}.menu__link{font-size:3rem;text-transform:uppercase}.menu__link:hover,.menu__link:active{border-bottom:.5rem solid #fff}
